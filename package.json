{
	"name": "template",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"export": "next export",
		"type-check": "tsc --project tsconfig.json --pretty --noEmit",
		"lint": "biome lint",
		"format": "biome format --write",
		"prepare": "husky",
		"prebuild": "prisma generate"
	},
	"lint-staged": {
		"./src/**/*.{ts,js,jsx,tsx}": [
			"npm run lint",
			"npm run type-check",
			"npm run format"
		]
	},
	"prisma": {
		"seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
	},
	"dependencies": {
		"@biomejs/biome": "^1.9.4",

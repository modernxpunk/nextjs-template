		"@types/react": "19.1.7",
		"@types/react-dom": "19.1.6",
		"class-variance-authority": "^0.7.1",
		"lint-staged": "^16.1.0",
		"postcss": "^8.5.4",
		"tailwindcss": "^4.1.8",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3"
	}
